    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/main.css" />
</head>
<body>
    <header class="default-header">
        <nav class="navbar navbar-expand-lg  navbar-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li>@Html.ActionLink("Strona Główna", "Index", "Home")</li>
                        <li>@Html.ActionLink("Sklep", "Sklep", "Home")</li>
                        <li>@Html.ActionLink("Koszyk", "Koszyk", "Home")</li>
                        <li>@Html.ActionLink("Logowanie/Rejestracja", "Login", "Home")</li>
                        <li>@Html.ActionLink("Kontakt", "Kontakt", "Home")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center">
                <div class="col-first">
                    <h1>Kontakt</h1>
                    <nav class="d-flex align-items-center justify-content-start">
                        <a href="Index.cshtml">Strona Główna<i class="fa fa-caret-right" aria-hidden="true"></i></a>
                    </nav>
                </div>
            </div>
        </div>
    </section>


    <div class="container">

        <div class="row justify-content-center align-self-center">
            <div class="col-md-6">
                <div class="login-form">
                    <h3 class="billing-title text-center">Kontakt</h3>
                    <p class="text-center mt-80 mb-40">Skontaktuj się z nami!</p>
                    <form method="post" action="Kontakt.cshtml">

                        @*<span class="form-control"> Receiver: </span>
                            <input class="form-control" type="text" name="receiver" /> </br>
                            <span class=" form-control"> Subject: </span> <input class="form-control" type="text" name="subject" /> <br />
                            <span class=" form-control"> Message: </span> <input class="form-control" type="text" name="message" /> <br />
                            <input class="btn btn-primary" type="submit" value="Send" />*@

                        <input type="text" name="sender" placeholder="mail" onfocus="this.placeholder=''" onblur="this.placeholder = 'Imię i nazwisko'" required class="common-input mt-20">
                        <input type="text" name="subject" placeholder="Temat*" onfocus="this.placeholder=''" onblur="this.placeholder = 'Temat*'" required class="common-input mt-20">
                        <input type="text" name="message " placeholder="Wiadomość*" onfocus="this.placeholder=''" onblur="this.placeholder = 'Wiadomość*'" required class="common-input mt-20">
                        <button class="view-btn color-2 mt-50 w-100" type="submit"><span>Wyślij</span></button>



                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer-area section-gap">
        <div class="container">
        <div class="row">
            @*<div class="footer-bottom d-flex justify-content-center align-items-center flex-wrap">*@
                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                <p class="footer-text m-0">
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script>
                </p>
                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
            @*</div>*@
        </div>
        </div>
    </footer>
    <!-- End footer Area -->
    <script src="~/Content/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
