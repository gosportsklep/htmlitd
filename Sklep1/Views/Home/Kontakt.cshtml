
@{
    ViewBag.Title = "Kontakt";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<h2>Kontakt</h2>
<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>

    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="img/fav.png">
    <!-- Author Meta -->
    <meta name="author" content="CodePixar">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Shop</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <!--
    CSS
    ============================================= -->

</head>
<body>
    <header class="default-header">
        <nav class="navbar navbar-expand-lg  navbar-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <header class="default-header">
                            <nav class="navbar navbar-expand-lg  navbar-light">
                                <div class="container">
                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                        <span class="navbar-toggler-icon"></span>
                                    </button>
                                    <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarSupportedContent">
                                        <ul class="navbar-nav">
                                            <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                                            <li>@Html.ActionLink("Sklep", "Sklep", "Home")</li>
                                            <li>@Html.ActionLink("Podsumowanie", "Podsumowanie", "Home")</li>
                                            <li>@Html.ActionLink("Logowanie/Rejestracja", "Login", "Home")</li>
                                            <li>@Html.ActionLink("Kontakt", "Kontakt", "Home")</li>
                                            <li>@Html.ActionLink("Koszyk", "Koszyk", "Home")</li>

                                        </ul>
                                    </div>
                                </div>
                            </nav>
                        </header>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- End Header Area -->
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center">
                <div class="col-first">
                    <h1>Kontakt</h1>
                    <nav class="d-flex align-items-center justify-content-start">
                        <a href="index.html">Strona Główna<i class="fa fa-caret-right" aria-hidden="true"></i></a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->
    <!-- Start My Account -->
    <div class="container">
        <div class="row justify-content-center align-self-center">
            <div class="col-md-6">
                <div class="login-form">
                    <h3 class="billing-title text-center">Kontakt</h3>
                    <p class="text-center mt-80 mb-40">Skontaktuj się z nami!</p>
                    <form action="#">
                        <input type="text" placeholder="Imię i nazwisko" onfocus="this.placeholder=''" onblur="this.placeholder = 'Imię i nazwisko'" required class="common-input mt-20">
                        <input type="email" placeholder="Email*" onfocus="this.placeholder=''" onblur="this.placeholder = 'Email*'" required class="common-input mt-20">
                        <input type="text" placeholder="Wiadomość*" onfocus="this.placeholder=''" onblur="this.placeholder = 'Wiadomość'" required class="common-input mt-20">
                        <button class="view-btn color-2 mt-50 w-100"><span>Wyślij</span></button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- End My Account -->
    <!-- start footer Area -->
    <footer class="footer-area section-gap">
        <div class="container">
            <div class="row">
                <div class="footer-bottom d-flex justify-content-center align-items-center flex-wrap">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    <p class="footer-text m-0">
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script>
                    </p>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </div>
            </div>
    </footer>

</body>
</html>